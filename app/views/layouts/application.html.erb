<!DOCTYPE html>
<html>
  <head>
    <title>Bandalize</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('favicon.ico'), :rel => 'icon', :type =>  'image/ico' %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

  </head>

  <body>

    <script type="text/javascript">
      window.bandalizelogo = "<%= image_url('bandalizelogo.svg') %>"
      window.tealx = "<%= image_url('tealCircleX.svg') %>"
      window.favicon = "<%= image_url('favicon.ico') %>"
      window.bluecheck = "<%= image_url('bluecheck.svg')%>"
      window.article1 = "<%= image_url('article1.png')%>"
      window.article2 = "<%= image_url('article2.jpg')%>"
      window.article3 = "<%= image_url('article3.png')%>"
      window.article4 = "<%= image_url('article4.jpg')%>"
    </script>

    <%= yield %>
  </body>
</html>
